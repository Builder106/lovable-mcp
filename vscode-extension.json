{
  "name": "lovable-dev-tools",
  "displayName": "Lovable.dev UI/UX Tools",
  "description": "MCP-powered UI/UX development tools for creating beautiful, accessible interfaces",
  "version": "1.0.0",
  "publisher": "lovable-dev",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onCommand:lovable.generateComponent",
    "onCommand:lovable.applyPattern",
    "onCommand:lovable.detectBugs",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lovable.generateComponent",
        "title": "Lovable: Generate Component"
      },
      {
        "command": "lovable.applyPattern",
        "title": "Lovable: Apply Pattern"
      },
      {
        "command": "lovable.detectBugs",
        "title": "Lovable: Detect Issues"
      }
    ],
    "configuration": {
      "title": "Lovable UI/UX Tools",
      "properties": {
        "lovable.designSystem": {
          "type": "string",
          "default": "tailwind",
          "enum": ["tailwind", "bootstrap", "material", "custom"],
          "description": "Design system to use for component generation"
        },
        "lovable.uiFramework": {
          "type": "string",
          "default": "react",
          "enum": ["react", "vue", "angular", "svelte"],
          "description": "UI framework to generate components for"
        },
        "lovable.accessibilityLevel": {
          "type": "string",
          "default": "AA",
          "enum": ["A", "AA", "AAA"],
          "description": "Level of accessibility compliance"
        }
      }
    }
  },
  "mcpExtension": {
    "lovable-ui": {
      "entryPoint": "./dist/index.js",
      "tools": [
        "generate_component",
        "apply_pattern",
        "detect_bugs"
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext .ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1"
  }
}