{
  "name": "lovable-mcp-ide",
  "version": "1.0.0",
  "description": "MCP IDE integration for lovable.dev UI/UX tooling",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node --loader ts-node/esm src/index.ts",
    "dev": "node --loader ts-node/esm src/index.ts",
    "dev:vscode": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "package": "npm run build && vsce package",
    "vscode:prepublish": "npm run build"
  },
  "keywords": [
    "ide",
    "extension",
    "mcp",
    "ui",
    "ux",
    "design",
    "lovable"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "lovable.generateComponent",
        "title": "Lovable: Generate Component"
      },
      {
        "command": "lovable.applyPattern",
        "title": "Lovable: Apply Pattern"
      },
      {
        "command": "lovable.detectBugs",
        "title": "Lovable: Detect Issues"
      }
    ],
    "configuration": {
      "title": "Lovable UI/UX Tools",
      "properties": {
        "lovable.designSystem": {
          "type": "string",
          "default": "tailwind",
          "description": "Design system to use for component generation"
        },
        "lovable.uiFramework": {
          "type": "string",
          "default": "react",
          "description": "UI framework to generate components for"
        },
        "lovable.accessibilityLevel": {
          "type": "string",
          "default": "AA",
          "enum": [
            "A",
            "AA",
            "AAA"
          ],
          "description": "Level of accessibility compliance"
        }
      }
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@types/axios": "^0.9.36",
    "@types/dotenv": "^6.1.1",
    "axios": "^1.8.2",
    "dotenv": "^16.4.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^20.17.24",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  }
}
